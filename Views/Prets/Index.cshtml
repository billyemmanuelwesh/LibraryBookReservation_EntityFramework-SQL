@model IEnumerable<GPLCC.Models.Pret>

@{
    ViewData["Title"] = "Index";
}

<h5 class="e">Liste des emprunteurs</h5>

<p>
    <a asp-action="Create" class="pret"><img src="~/images/pret.png"> Ajouter un pret </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membre!.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membre!.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livre!.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livre!.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Membre!.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Membre!.Prenom)
            </td>
           
            <td>
                 @Html.DisplayFor(modelItem => item.Livre!.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Livre!.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFin)
            </td>
            <td>
                    @Html.ActionLink("", "Edit", new { id=item.Numero },new { @class="fa fa-edit",@title="Modifier" })   
                    @Html.ActionLink("", "Details", new { id=item.Numero },new { @class="fa fa-th-list",@title="Informations" })   
                    @Html.ActionLink("", "Delete", new { id=item.Numero },new { @class="fa fa-remove",@title="Supprimer" })
            </td>
        </tr>
}
    </tbody>
</table>
